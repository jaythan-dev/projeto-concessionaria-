{
  "projects": {
    "frontend": {
      "rootDirectory": "front",
      "builds": [
        { "src": "package.json", "use": "@vercel/static-build" }
      ],
      "outputDirectory": "dist",
      "routes": [
        { "src": "/(.*)", "dest": "/dist/index.html" }
      ]
    },
    "backend": {
      "rootDirectory": "back",
      "builds": [
        { "src": "api/**/*.ts", "use": "@vercel/node" }
      ],
      "routes": [
        { "src": "/api/(.*)", "dest": "/api/$1" }
      ]
    }
  }
}
